<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.codepath.apps.mysimpletweets.fragment.ComposeTweetDailog"
    android:minHeight="350dp"
    android:minWidth="400dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll1"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageButton
            android:id="@+id/ibCancel"
            android:layout_width="wrap_content"  android:layout_height="wrap_content"
            android:inputType="text"
            android:src="@drawable/canclebutton"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:imeOptions="actionDone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:paddingTop="15dp"
            />
        <ImageView
            android:id="@+id/ivProfileImage2"
            android:layout_width="wrap_content"  android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_launcher"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:imeOptions="actionDone" />
    </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/etComposeTweet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="What's Happening?"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:id="@+id/vwLine"
        android:layout_below="@id/etComposeTweet"
        android:layout_marginTop="110dp"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/darker_gray"/>


    <Button
        android:id="@+id/ibTweetSubmit"
        android:layout_below="@id/vwLine"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="TWEET"
        android:textSize="10sp"
        android:background="@color/blue"/>

        <TextView
            android:id="@+id/tvTweetSize"
            android:layout_below="@id/vwLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ibTweetSubmit"
            android:layout_alignParentLeft="true"
            android:paddingLeft="210dp"
            android:paddingTop="19dp"
            />
</RelativeLayout>


</FrameLayout>
